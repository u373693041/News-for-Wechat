.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
  border: 1px solid #aaa;
  border-radius: 5px;
  width: 200rpx;
  height: 80rpx;
}

.user-motto{
  display: block;
  line-height: 80rpx;
  text-align: center;
  width: 100%;
}


